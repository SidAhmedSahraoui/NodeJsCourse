<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/main.css">
</head>

<body>
    <%- include('includes/navbar.ejs') %>
    <main>
        <% if (users.length > 0) { %>
            <div class="cards">
                <% for (let user of users) { %>
                    <div class="card">
                        <p class="num">
                            <%= user.num %>
                        </p>
                        <p class="name">
                            <%= user.name %>
                        </p>
                        <p class="email">
                            <%= user.email %>
                        </p>
                        <button class="edit">
                            Edit
                        </button>
                        <button class="delete">
                            Delete
                        </button>
                    </div>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Users Found!</h1>
        <% } %>
    </main>
<%- include('includes/end.ejs') %>